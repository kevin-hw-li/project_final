<div class="container">
  <div class="row">
    <div class="col s3"></div>
    <div class="signin col s6">
      <h3>Sign into your account</h3>
    </div>
    <div class="col s3"></div>
  </div>

  <%= form_tag signin_path, method: :post do %>
    <div class="row">
      <div class="col s4"></div>
      <div class="input-field col s4">
        <input type="text" name="email" />
        <label>Email</label>
      </div>
      <div class="col s4"></div>
    </div>
    <div class="row">
      <div class="col s4"></div>
      <div class="input-field col s4">
        <input type="password" name="password" />
        <label>Password</label>
      </div>
      <div class="col s4"></div>
    </div>
    <div class="row">
      <div class="col s4"></div>
      <div class="signin input-field col s4">
        <input class="btn waves-effect red" type="submit" value="Sign In" />
      </div>
      <div class="col s4"></div>
    </div>
  <% end %>
</div>
